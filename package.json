{
  "name": "tax-service",
  "version": "0.1.0",
  "description": "Tax service using Express, PostgreSQL and TypeScript",
  "main": "dist/server.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "prettier:write": "prettier --write \"./**/*.{ts,tsx}\"",
    "prettier:check": "prettier --check \"./**/*.{ts,tsx}\"",
    "test:type": "tsc --noEmit",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "open-swagger-ui": "^1.2.0",
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.6.6",
    "jest": "^29.7.0",
    "prettier": "3.5.2",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/imevanc/tax-service.git"
  }
}
